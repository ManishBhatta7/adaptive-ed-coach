  "shortcuts": [
    {
      "name": "Start Reflection",
      "short_name": "Reflect",
      "description": "Begin a new metacognitive reflection session",
      "url": "/metacognition?action=reflect",
      "icons": [
        {
          "src": "/icons/reflect-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "View Progress",
      "short_name": "Progress",
      "description": "Check your learning progress and achievements",
      "url": "/dashboard?tab=progress",
      "icons": [
        {
          "src": "/icons/progress-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "AI Tutor",
      "short_name": "AI Tutor",
      "description": "Get help from your AI learning coach",
