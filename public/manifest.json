      "icons": [
        {
          "src": "/icons/tutor-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Collaborate",
      "short_name": "Collaborate",
      "description": "Join or create collaboration sessions",
      "url": "/collaboration",
      "icons": [
        {
          "src": "/icons/collaborate-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+educoach",
      "url": "/share?content=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "prefer_related_applications": false
}